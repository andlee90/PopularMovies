<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/rv_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/detail_view_margin"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true">

        <ImageView
            android:id="@+id/iv_author"
            android:contentDescription="@string/review_author_icon_content_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/detail_view_margin"
            android:layout_marginRight="@dimen/detail_view_margin"
            android:src="@drawable/ic_display_author"/>

        <TextView
            android:id="@+id/tv_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/detail_view_text_padding"
            android:paddingBottom="@dimen/detail_view_text_padding"
            android:textColor="@color/colorText"
            android:textSize="@dimen/standard_text_size"
            android:textStyle="bold"
            tools:text="author" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rv_author"
        android:layout_marginBottom="@dimen/detail_view_margin"
        android:textColor="@color/colorText"
        android:textSize="@dimen/standard_text_size"
        tools:text="content" />
</RelativeLayout>